<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/detayLayout"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".ui.detay.DetayFragment" android:tag="layout/fragment_detay_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="binding_1"                 
        android:id="@+id/imgDetay"
        android:paddingStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/detayAge"
        android:layout_marginLeft="20dp"
        android:tag="binding_2"                        
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detayTeam"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:tag="binding_3"               />



</LinearLayout>
         