<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="viewModel"
            type="com.generalmobile.app.driverexample.ui.adapter.DriverAdapterViewModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/driverAdapterList"
    android:orientation="horizontal"
    tools:context=".ui.adapter.DriverAdapter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverId"
        android:textSize="20sp"
        android:text="@{viewModel.item.id.toString()}"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverName"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:text="@{viewModel.item.name}"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverPoint"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:text="@{viewModel.item.point.toString()}"/>


</LinearLayout>

</layout>